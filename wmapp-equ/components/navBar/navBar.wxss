@import "../moreFunctions/moreFunctions.wxss";

/* 顶部要固定定位   标题要居中   自定义按钮和标题要和右边微信原生的胶囊上下对齐 */

.nav-wrap {
  position: fixed;
  width: 100%;
  top: 0;
  background: #fff;
  color: rgb(121, 120, 120);
  z-index: 9999;
}

/* 标题要居中 */

.nav-title {
  position: absolute;
  text-align: center;
  max-width: 290rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  font-size: 34rpx;
  color: #696d79;
  font-weight: 600;
  
}

.transparent .nav-title {
  color: #fff;
  text-shadow: 0 0 10rpx #83868d;
}

.nav-capsule {
  display: flex;
  align-items: flex-end;
  height: 100%;
  /* box-shadow: 0 4rpx 2rpx rgba(0, 0, 0, 0.05); */
}

.transparent .nav-capsule {
  box-shadow: none;
}

.nav-capsule button {
  margin: 0;
  border: 0;
  height: 52rpx;
  padding: 0 18rpx 0;
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.nav-capsule image {
  width: 50rpx;
  height: 52rpx;
  position: relative;
  align-items: center;
}

.nav-capsule>image {
  padding: 0 18rpx 10rpx;
  /* margin-bottom:16rpx; */
}

.nav-capsule>image:first-child {
  padding-left: 30rpx;
}

.nav-capsule image.header-back {
  height: 50rpx;
  padding-bottom: 12rpx;
}
.nav-capsule image.header-share{
  height: 40rpx;
  width: 40rpx;
  padding-bottom: 12rpx;
}
/* 首页 */

.index-header {
  display: flex;
  width: 70%;
  padding-left: 30rpx;
  position: absolute;
  bottom: 10rpx;
  left: 0;
  vertical-align: bottom;
}

.search {
  border-radius: 40rpx;
  box-shadow: inset 0 0 6rpx rgba(0, 0, 0, 0.2);
  width: 80%;
  height: 56rpx;
  margin-left: 45rpx;
  display: flex;
  align-items: center;
  margin-top: -10rpx;
}

.search text {
  line-height: 60rpx;
  margin-left: 10rpx;
}

.search image {
  height: 36rpx;
  width: 36rpx;
  align-items: center;
  margin-left: 20rpx;
}

.notice {
  width: 40rpx;
  height: 40rpx;
  position: relative;
}

.notice text {
  position: absolute;
  top: -10rpx;
  right: -6rpx;
  background-color: #ed3d3d;
  border-radius: 50%;
  color: #fff;
  width: 24rpx;
  height: 24rpx;
  line-height: 26rpx;
  font-size: 18rpx;
  text-align: center;
}

.e-num {
  padding-left: 44rpx;
  font-size: 18rpx;
  margin-top: 8rpx;
}

.e-num view {
  margin-bottom: 4rpx;
}

.square-camera {
  display: flex;
  align-items: flex-end;
  width: 50%;
}

.square-camera image {
  width: 44rpx;
  height: 44rpx;
  padding-bottom: 14rpx;
  padding-left: 58rpx;
}

.transparent {
  background: rgba(0, 0, 0, 0) !important;
}

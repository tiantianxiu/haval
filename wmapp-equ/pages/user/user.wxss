@import '../detail/detail.wxss';

.detail-cover {
  overflow: auto;
}

.detail-cover image {
  min-height: 400rpx;
}

.detail-cover text {
  color: #f0f0f0;
  position: absolute;
  bottom: 66rpx;
  right: 30rpx;
  font-size: 24rpx;
  padding: 2rpx 10rpx;
  border-radius: 50rpx;
  background: rgba(0, 0, 0, 0.4);
}

.set-li {
  display: flex;
  width: 57%;
  font-size: 26rpx;
  position: absolute;
  right: 0rpx;
  bottom: -30rpx;
  text-align: right;
}

.set-li .li {
  color: #11b9ba;
  background: #f0f0f0;
  border-radius: 14rpx;
  padding: 10rpx;
  margin-right: 30rpx;
}

.set-li .li:last-child {
  margin-right: 0;
}

.set-li .li image {
  height: 36rpx;
  width: 36rpx;
}

.user-data {
  padding: 0 20rpx;
}

.level {
  position: static;
}

.user-data .name {
  line-height: 50rpx;
  margin-top: 6rpx;
  font-size: 30rpx;
  letter-spacing: 2rpx;
  font-weight: 600;
}

.describe {
  color: #bad8d8;
  font-size: 26rpx;
  margin-top: 20rpx;
}

.user-data .set-li {
  margin-top: 14rpx;
  position: static;
  font-size: 24rpx;
  width: 100%;
}

.user-data .set-li .li {
  padding: 4rpx 8rpx 4rpx;
  display: table-cell;
}

.user-data .set-li .li text {
  vertical-align: middle;
}

.user-data .set-li image {
  height: 24rpx;
  width: 24rpx;
}

.zans {
  margin-top: 26rpx;
  display: flex;
}

.zans .li {
  color: #6a6d7c;
  flex: 1;
  text-align: center;
}

.zans .li:first-child {
  text-align: left;
}

.zans .li:last-child {
  text-align: right;
}

.zans .li text {
  color: #0fb9b9;
  font-size: 28rpx;
  font-weight: 600;
  margin-top: 10rpx;
}

.my-content {
  padding: 40rpx 10rpx 0;
}

.my-nav {
  display: flex;
}

.my-nav .li {
  flex: 1;
  text-align: center;
  color: #bad6d7;
  font-weight: 600;
  padding-bottom: 16rpx;
  font-size: 32rpx;
}

.my-nav .li.active {
  color: #070c2a;
  background: url(https://e-power.oss-cn-shenzhen.aliyuncs.com/new_resources/image/common/point.png) center bottom no-repeat;
  background-size: 40rpx;
}

.square-year {
  color: #080d2a;
  font-weight: 600;
}

.my-square {
  padding: 10rpx 20rpx 0;
}

.my-square.section-content {
  margin-top: 42rpx;
}

.section-title {
  padding-bottom: 52rpx;
}

.my-square .li {
  display: flex;
  margin-bottom: 48rpx;
}

.my-square .li .user-left {
  width: 14%;
  color: #4340f1;
  font-size: 32rpx;
  margin-top: -4rpx;
  text-align: left;
}

.my-square .li .user-right {
  flex: 1;
}

.my-square .li .user-left text {
  font-size: 22rpx;
  font-weight: 400;
  color: #11b9ba;
  margin-left: -8rpx;
}

.square-message {
  flex: 1;
  display: inline-block;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  word-break: break-all;
  line-height: 180%;
  color: #696c7b;
  font-size: 28rpx;
  margin-top: -10rpx;
  height: 90%;
}

.square-message.noimage {
  padding: 6rpx 18rpx 16rpx;
  background-color: #f0f0f0;
  border-radius: 16rpx;
  border-top-left-radius: 0;
  margin-top: 0;
}

.post-content {
  flex: 1;
}

.post-content .square-message.post-message {
  font-size: 30rpx;
  font-weight: 600;
  color: #070a29;
  height: auto;
  margin-bottom: 20rpx;
}

.my-square .li .post-content .square-image {
  width: 70vw;
  height: 38vw;
}

.my-square .li .post-content .square-image image {
  height: 38vw;
}

.my-square .li .square-image {
  width: 21vw;
  height: 21vw;
  border-radius: 18rpx;
  overflow: hidden;
  position: relative;
  margin-right: 20rpx;
}

.square-image text {
  position: absolute;
  bottom: 0;
  right: 0;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, 0.8);
  color: #fff;
  width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  text-align: center;
  font-size: 24rpx;
}

.user-year {
  margin-bottom: 30rpx;
}

.quest-image {
  height: 23.6vw;
  margin-bottom: 20rpx;
}

.quest-image image {
  width: 23.6vw;
  margin-right: 20rpx;
  border-radius: 18rpx;
  position: relative
}
.quest-image image text{
   position: absolute;
  background: rgba(0, 0, 0, 0.7);
  color: #fff;
  width: 36rpx;
  height: 36rpx;
  text-align: center;
  border-radius: 50%;
  right: 8rpx;
  bottom: 8rpx;
  z-index: 2;
  font-size: 26rpx;
}

.quest-message {
  height: auto;
  margin-bottom: 14rpx;
}

.footer, .footers {
  font-size: 24rpx;
}

.price {
  position: absolute;
  right: 0;
  top: 0;
}

.price text {
  color: #ee5051;
  font-weight: 600;
}

.view-reply .shares {
  margin: 0;
}

.vote-list, .count-down.count-end {
  font-size: 26rpx;
}

.vote-content .li .name {
  line-height: 80rpx;
}

.vote-content .li .a {
  top: 30rpx;
}

.square-list {
  margin-top: 10rpx;
}

.square-list .quest-image {
  height: 29vw;
}

.square-list .quest-image image {
  width: 28vw;
}

.avatar {
  width: 110rpx;
  height: 110rpx;
}

.big .user-info {
  top: -50rpx;
  margin-bottom: -34rpx;
}

.set-li {
  bottom: 0rpx;
}

.avatar .img {
  border: 4rpx solid #fff;
}

.spe-content {
  display: flex;
  position: relative;
}

.mul-time .price {
  color: #ed5151;
  font-weight: 600;
  font-size: 32rpx;
}

.multiple-text .time {
  float: right;
  color: #cdced3;
  font-size: 22rpx;
  margin-top: 8rpx;
  margin-left: 12rpx;
}
.vote-list .title {
  margin-bottom: 24rpx;
}